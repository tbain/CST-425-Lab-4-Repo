<?xml version="1.0"?>
<project name="Lab4Given" default="targets" basedir=".">
  <description>
  This project constitutes the given Model 1 application for a fictional news feeder
  </description>
  <!-- set global properties for this build -->
  <property name="tomcat.home" value="C:\wrkspce\Tomcat"/>
  <property name="src" value="./src" />
  <property name="lib" location="./lib" />
  <property name="res" value="./WebContent" />
  <property name="build" value="./build" />
  <property name="classes" value="./classes" />
  <property name="appname" value="lab4given" />
  <property name="war" value="${appname}.war" />

   <path id="compile.classpath">
     <pathelement location="${classes}"/>
     <fileset dir="${lib}">
         <include name="*.jar"/>
         <include name="**/*.jar"/>
     </fileset>
     <fileset dir="${tomcat.home}/lib">
         <include name="*.jar"/>
      </fileset>
   </path>

   <target name="targets">
      <echo message="targets are clean, prepare, compile, war, and deploy"/>
   </target>

   <target name="prepare">
      <!-- Create the time stamp -->
      <tstamp/>
      <mkdir dir="${classes}"/>
      <mkdir dir="${build}"/>
   </target>
   
   <target name="compile" depends="prepare"
           description="Compile Java sources">
      <javac srcdir="${src}"
             destdir="${classes}">
         <classpath refid="compile.classpath"/>
      </javac>
   </target>

   <target name="clean">
	<delete file="${war}"/>
	<delete dir="${build}"/>
	<delete dir="${classes}"/>
   </target>

   <target name="build" depends="compile">
	  <copy todir="${build}/WEB-INF/classes" overwrite="yes">
    	<fileset dir="${classes}"/>
      </copy>
      <copy todir="${build}/WEB-INF" file="web.xml" overwrite="yes"/>
      <copy todir="${build}">
      	<fileset dir="${res}" includes="**/*.html,**/*.jsp,**/*.js"/>
      </copy>
      <copy todir="${build}/WEB-INF/lib">
      	<fileset dir="${lib}" includes="*.jar"/>
      </copy>
   </target>
   
   <target name="war" depends="build">
      <jar destfile="${war}" basedir="${build}" />
   </target>

   <target name="deploy" depends="war">
     <echo message="TOMCAT_HOME is set to ${tomcat.home}" />
			<!-- Copy to Tomcat WebApps directory -->
      <copy file="${war}" todir="${tomcat.home}/webapps" overwrite="yes" />
      <echo message="" />
      <echo message="Deployment complete"/>
    </target>
</project>
